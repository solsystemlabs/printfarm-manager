# Environment
ENVIRONMENT=development

# Database (Neon PostgreSQL)
# Development: Local PostgreSQL or Neon development branch
DATABASE_URL=postgresql://user:password@localhost:5432/printfarm_manager?sslmode=disable

# Cloudflare R2 Storage (via S3 API)
# Only required for staging/production environments
# Development uses MinIO instead
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=pm-dev-files
R2_PUBLIC_URL=https://pm-dev-files.r2.cloudflarestorage.com

# MinIO (Local Development Only)
# Default credentials for local MinIO instance
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=pm-dev-files
